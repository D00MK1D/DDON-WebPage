<div class="alert alert-secondary mt-4">
    <span class="oi oi-pencil me-2" aria-hidden="true"></span>
    <strong>@Title</strong>

    <span class="text-nowrap">
        <img src="./img/SlayGoblinsForUs.png" style="width:32px;height:32px;" />
        <br />
        Please, feel free to open an issue at
        <a target="_blank" class="font-weight-bold link-dark" href="https://github.com/D00MK1D/DDON-WebPage/issues"></a>
    </span>
    and tell me your suggestion!
</div>

@code {
    // Demonstrates how a parent component can supply parameters
    [Parameter]
    public string? Title { get; set; }
}