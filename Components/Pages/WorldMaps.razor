@page "/WorldMaps"

<PageTitle>Image Construct</PageTitle>


<style>
    .map{

        font-size: 0;
        line-height: 0;
    }
    .map img{
        display: inline-block;
        margin: 0;
        padding: 0;
        border: 0;
        width: 210px;
    }
    #map{
        min-width: 1890px;
    }
</style>

<div id="map" class="map">

    @for (int i2 = 0; i2 <= 10; i2++)   // 0..9 + o caso especial (10)
    {
        for (int i1 = 0; i1 < 9; i1++)
        {
            var code = i2 < 10
            ? $"0{i2}0{i1}"
            : $"100{i1}";   // caso especial do seu último loop

            <img src="./img/Maps/Lestania/field000_m00_@(code)_0000.png" />
        }
    }
</div>
