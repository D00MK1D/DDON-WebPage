@inject AppDbContext Psql
@using DDON_WebPage.Components.Data
@using Microsoft.EntityFrameworkCore

@page "/"


<PageTitle>Home</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Hello, world!</MudText>
<MudText Class="mb-8">Welcome to your new app, powered by MudBlazor and the .NET 9 Template!</MudText>

<MudAlert Severity="Severity.Normal">
    You can find documentation and examples on our website here:
    <MudLink Href="https://mudblazor.com" Target="_blank" Typo="Typo.body2" Color="Color.Primary">
        <b>www.mudblazor.com</b>
    </MudLink>
</MudAlert>

<br />


<MudTable Items="accounts" Hover="true">
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Normal Name</MudTh>
        <MudTh>Email Token</MudTh>
        <MudTh>Password</MudTh>
        <MudTh>Created At</MudTh>
        <MudTh>Last Login</MudTh>
        <MudTh>Email Verified At</MudTh>
    </HeaderContent>

    <RowTemplate>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Normal Name">@context.NormalName</MudTd>
        <MudTd DataLabel="Email Token">@context.EmailToken</MudTd>
        <MudTd DataLabel="Password">@context.Password</MudTd>
        <MudTd DataLabel="Created At">@context.CreatedAt</MudTd>
        <MudTd DataLabel="Last Login">@context.LastLogin</MudTd>
        <MudTd DataLabel="Email Verified At">@context.EmailVerifieldAt</MudTd>
    </RowTemplate>
</MudTable>



@code {
    private List<Account> accounts;

    protected override async Task OnInitializedAsync()
    {
        accounts = await Psql.account.ToListAsync();
    }
}